<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ServerPanelController">
    <HBox>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS"/>
        <Button fx:id="upDir" text="Up" onAction="#pathUp"/>
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS"/>

    <properties>
        <controller><fx:reference source="controller"/></controller>
    </properties>
</VBox>
